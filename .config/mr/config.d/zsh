[${XDG_CONFIG_HOME:-$HOME/.config}/vcsh/repo.d/zsh.git]
checkout = vcsh clone git@github.com:marklee77/vcsh-homedir-zsh.git zsh
commit   = vcsh zsh commit -a
update   = vcsh zsh pull
push     = vcsh zsh push
status   = vcsh zsh status
gc       = vcsh zsh gc

[.zprezto]
checkout = git clone --recursive https://github.com/sorin-ionescu/prezto.git "${ZDOTDIR:-$HOME}/.zprezto"
push = /bin/true
update = git pull && git submodule update --init --recursive
